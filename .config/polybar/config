ramp-coreload-7-foreground = ${colors.alerted}



[module/wireless-network]
type = internal/network
interface = wlp3s0
interval = 3.0
accumulate-stats = true
unknown-as-up = true
format-connected =  <label-connected>
format-disconnected =  <label-disconnected>
label-connected = %ifname% %downspeed:9%
label-connected-foreground = #eefafafa

label-disconnected = not connected
label-disconnected-foreground = #66ffffff

[module/wired-network]
type = internal/network
interface = enp0s25
interval = 3.0
accumulate-stats = true
unknown-as-up = true
format-connected =  <label-connected>
format-disconnected =  <label-disconnected>
label-connected = %ifname% %downspeed:9%
label-connected-foreground = #eefafafa

label-disconnected = not connected
label-disconnected-foreground = #66ffffff

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1b.0.analog-stereo

format-volume = <ramp-volume> <label-volume>
label-muted =  muted
label-muted-foreground = #666

; Only applies if <ramp-volume> is used
ramp-volume-0 = 
ramp-volume-1 =  

[module/powermenu]
type = custom/menu

format-padding = 5

label-open = 
label-close = 

menu-0-0 = Terminate WM
menu-0-0-foreground = #fba922
menu-0-0-exec = bspc quit -1
menu-0-1 = Reboot
menu-0-1-foreground = #fba922
menu-0-1-exec = menu_open-1
menu-0-2 = Power off
menu-0-2-foreground = #fba922
menu-0-2-exec = shutdown now

menu-1-0 = Cancel
menu-1-0-foreground = #fba922
menu-1-0-exec = menu_open-0
menu-1-1 = Reboot
menu-1-1-foreground = #fba922
menu-1-1-exec = sudo reboot

menu-2-0 = Power off
menu-2-0-foreground = #fba922
menu-2-0-exec = sudo poweroff
menu-2-1 = Cancel
menu-2-1-foreground = #fba922
menu-2-1-exec = menu_open-0

[module/clock]
type = internal/date
interval = 2
date = %%{F#999}%Y-%m-%d%%{F-}  %%{F#fff}%H:%M%%{F-}

[module/i3]
type = internal/i3
enable-click = true

format = <label-state> <label-mode>
format-spacing = 0

label-focused = %index%
label-focused-padding = 1
label-focused-margin = 1
label-focused-underline = ${colors.alerted}

label-unfocused = %index%
label-unfocused-margin = 1

label-urgent = %index%
label-urgent-margin = 1

label-visible = %index%
label-visible-underline= ${colors.normal}
label-visible-margin = 1

label-separator = |
label-separator-foreground = ${colors.normal}

